{
	"root": false,
	"$schema": "https://biomejs.dev/schemas/2.3.8/schema.json",
	"formatter": {
		"enabled": true,
		"indentStyle": "tab",
		"indentWidth": 2
	},
	"javascript": {
		"formatter": {
			"quoteStyle": "single",
			"semicolons": "asNeeded",
			"arrowParentheses": "asNeeded"
		}
	},
	"linter": {
		"domains": {
			"next": "recommended",
			"react": "recommended"
		},
		"enabled": true,
		"rules": {
			"recommended": true,
			"nursery": {
				"useSortedClasses": {
					"options": {},
					"level": "error",
					"fix": "safe"
				}
			},
			"style": {
				"useBlockStatements": {
					"options": {},
					"level": "error",
					"fix": "safe"
				}
			}
		}
	},
	"files": {
		"ignoreUnknown": true,
		"includes": ["**", "!node_modules", "!.next", "!dist", "!build"]
	},
	"css": {
		"parser": {
			"tailwindDirectives": true
		}
	},
	"vcs": {
		"clientKind": "git",
		"enabled": true,
		"useIgnoreFile": true
	},
	"assist": {
		"actions": {
			"source": {
				"organizeImports": {
					"level": "on",
					"options": {
						"groups": [
							":URL:",
							":BUN:",
							":NODE:",
							":PACKAGE:",
							":PACKAGE_WITH_PROTOCOL:",
							"@/types",
							"@/utils",
							"@/hooks",
							"@/configs",
							"@/constants",
							"@/models",
							"@/services",
							"@/components",
							"@/styles",
							":BLANK_LINE:",
							":PATH:"
						]
					}
				},
				"useSortedAttributes": "on",
				"useSortedProperties": "on"
			}
		}
	}
}
